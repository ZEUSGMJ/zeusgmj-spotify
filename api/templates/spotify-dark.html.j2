<svg width="640" height="200" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="640" height="200">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <style>

                .main {
                    /* margin-top: 10px; */
                    display: flex;
                }

                .card {
                    flex-direction: column;
                    gap: 10px;
                }

                .currentStatus {
                    float: left;
                    font-size: 24px;
                    position: static;
                    margin-top: -5px;
                    margin-left: 12px;
                    color: #b3b3b3;
                }
                
                .container {
                    padding: 10px 10px 10px 0px;
                    background-color: #172739;
                }

                .flex {
                    display: flex;
                }

                .song-info {
                    flex-direction: column;
                }

                .art {
                    width: 28%;
                    float: left;
                    margin-left: -5px;
                }

                .content {
                    width: 70%;
                }

                .song {
                    color: #c3c3c3;
                    overflow:hidden;
                    margin-top: -5px;
                    font-size: 24px;
                    text-align: left;
                    padding-left: 12px;
                    white-space:nowrap;
                    text-overflow:ellipsis;
                    font-weight: bold;
                }

                .artist {
                    color: #b3b3b3;
                    overflow: hidden;
                    font-size: 20px;
                    padding-left: 12px;
                    text-align: left;
                    white-space:nowrap;
                    text-overflow:ellipsis;
                }

                .album {
                    color: #c3c3c3;
                    font-size: 20px;
                    padding-left: 12px;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow:ellipsis;
                    font-weight: bold;
                }

                .cover {
                    width: 144px;
                    height: 144px;
                    border-radius: 4px;
                    box-shadow: 0px 0px 2px 3px rgba(125,125,125,0.75);
                }

                #bars {
                    width: 50px;
                    height: 30px;
                    bottom: 8px;
                    position: absolute;
                    margin: -20px 0 0 12px;
                }

                .bar {
                    width: 3px;
                    bottom: 1px;
                    height: 3px;
                    position: absolute;
                    background: #1DB954cc;
                    animation: sound 0ms -800ms linear infinite alternate;
                }
                
                div {
                    font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
                }
                
                @keyframes sound {
                    0% {
                        height: 2px;
                        opacity: 0.25;
                    }

                    25% {
                        height: 8px;
                        opacity: 0.45;
                    }

                    50% {
                        height: 18px;
                        opacity: 0.65;
                    }

                    75% {
                        height: 24px;
                        opacity: 0.85;
                    }

                    100% {
                        height: 30px;
                        opacity: 1;
                    }
                }

                {{barCSS|safe}}
            </style>

            <div class="card flex">
                <div class="currentStatus">{{status}}</div>

                <div class="main">
                    <a class="art" href="{{songURL}}" target="_blank">
                        <center>
                            <img src="data:image/svg;base64, {{image}}" class="cover" />
                        </center>
                    </a>

                    <div class="content">
                        <div class = "song-info flex">
                            <div class="song">{{songName}}</div>
                            <div class="artist">{{artistName}}</div>
                            <div class="album">{{albumName}}</div>
                        </div>
                        <div id="bars">{{contentBar|safe}}</div>
                    </div>
                </div>
            </div>

        </div>
    </foreignObject>
</svg>
